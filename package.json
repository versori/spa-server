{
  "name": "@versori/spa-server",
  "version": "1.2.0",
  "description": "A HTTP server for SPA applications",
  "files": [
    "client",
    "server"
  ],
  "scripts": {
    "test": "jest",
    "clean": "rimraf client server",
    "fmt": "run-s fmt:eslint fmt:prettier",
    "fmt:eslint": "eslint . --ext .tsx --ext .ts --fix",
    "fmt:prettier": "prettier --write '**/*'",
    "check": "run-p check:*",
    "check:eslint": "eslint . --ext .tsx --ext .ts",
    "check:prettier": "prettier --check '**/*'",
    "build": "tsc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/versori/spa-server.git"
  },
  "keywords": [
    "spa",
    "http",
    "server"
  ],
  "author": "Versori Ltd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/versori/spa-server/issues"
  },
  "homepage": "https://github.com/versori/spa-server#readme",
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.5.0",
    "debug": "^4.3.4",
    "fastify": "^4.6.0",
    "jsdom": "^19.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.3",
    "@types/debug": "^4.1.7",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.185",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.1",
    "typescript": "^4.6.4"
  }
}
