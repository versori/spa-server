{
  "name": "@versori/spa-server",
  "version": "1.5.1",
  "description": "A HTTP server for SPA applications",
  "files": [
    "client",
    "server"
  ],
  "scripts": {
    "test": "jest",
    "clean": "rimraf client server",
    "fmt": "run-s fmt:eslint fmt:prettier",
    "fmt:eslint": "eslint . --fix",
    "fmt:prettier": "prettier --write '**/*'",
    "check": "run-p check:*",
    "check:eslint": "eslint .",
    "check:prettier": "prettier --check '**/*'",
    "build": "tsc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/versori/spa-server.git"
  },
  "keywords": [
    "spa",
    "http",
    "server"
  ],
  "author": "Versori Ltd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/versori/spa-server/issues"
  },
  "homepage": "https://github.com/versori/spa-server#readme",
  "dependencies": {
    "@fastify/helmet": "^12.0.1",
    "@fastify/static": "^8.0.2",
    "debug": "^4.3.7",
    "fastify": "^5.7.3",
    "jsdom": "^25.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@jest/globals": "^29.7.0",
    "@types/debug": "^4.1.12",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.12",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  }
}
