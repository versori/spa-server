{
  "name": "@versori/spa-server",
  "version": "1.0.0",
  "description": "A HTTP server for SPA applications",
  "files": [
    "client",
    "server"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf client server",
    "fmt": "run-s fmt:eslint fmt:prettier",
    "fmt:eslint": "eslint src --ext .tsx --ext .ts --fix",
    "fmt:prettier": "prettier --write '**/*'",
    "check": "run-p check:*",
    "check:eslint": "eslint src --ext .tsx --ext .ts",
    "check:prettier": "prettier --check '**/*'",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/versori/spa-server.git"
  },
  "keywords": [
    "spa",
    "http",
    "server"
  ],
  "author": "Versori Ltd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/versori/spa-server/issues"
  },
  "homepage": "https://github.com/versori/spa-server#readme",
  "dependencies": {
    "@fastify/static": "^5.0.1",
    "debug": "^4.3.4",
    "fastify": "^3.29.0",
    "jsdom": "^19.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jsdom": "^16.2.14",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  }
}
